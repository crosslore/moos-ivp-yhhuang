Behavior = BHV_SearchFront_yhh 
{
    name = Square_$(VNAME)
    pwt  = 100
    condition = FRONT_SEARCH = true 
    activeflag   = SURVEY_UNDERWAY = true
    inactiveflag = SURVEY_UNDERWAY = false
    endflag = FRONT_SEARCH = false
    endflag = RETURN = true
    
    radius = 10
    speed  = 2 
    vname  = $(VNAME)
    // the dis tolerance between point and line
    line_dis = 5

//Sine wave config  
  
//    omega     = 0.1
      omega     = 0.3
//        omega   = 0.1
//    amplitude = 25
      amplitude = 50
//Rectangle Config

    threshold      = 1.5
    average_number = 30
    width          = 70
    length         = 100

#ifdef CLOCKWISE  1
    direction     = clock
    middle_ptx     = -5
    middle_pty     = -71
 
#elseifdef CLOCKWISE 0
    direction     = cclock
    middle_ptx     = 123
    middle_pty     = -77
 
#endif
}
